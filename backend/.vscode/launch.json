{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      // Attach to running Rails server (run with: bin/dev or rdbg -n --open -c -- bin/rails s)
      "name": "Attach with rdbg",
      "type": "rdbg",
      "request": "attach"
    },
    {
      "name": "Debug current file with rdbg",
      "type": "rdbg",
      "request": "launch",
      "script": "${file}",
      "args": [],
      "askParameters": true
    },
    {
      "name": "Rails Console",
      "type": "rdbg",
      "request": "launch",
      "script": "${workspaceFolder}/bin/rails",
      "args": ["console"],
      "useBundler": true
    },
    {
      "name": "RSpec - all",
      "type": "rdbg",
      "request": "launch",
      "script": "${workspaceFolder}/bin/rspec",
      "args": [],
      "askParameters": false
    },
    {
      "name": "RSpec - current file",
      "type": "rdbg",
      "request": "launch",
      "script": "${workspaceFolder}/bin/rspec",
      "args": ["${file}"],
      "askParameters": false
    },
    {
      "name": "RSpec - current line",
      "type": "rdbg",
      "request": "launch",
      "script": "${workspaceFolder}/bin/rspec",
      "args": ["${file}:${lineNumber}"],
      "askParameters": false
    }
  ]
}
